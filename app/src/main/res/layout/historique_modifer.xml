<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF">

    <View
        android:id="@+id/pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#316C19"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00316C19"
        android:backgroundTint="#00316C19"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="212dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginBottom="10dp"
            android:background="#00316C19"
            android:backgroundTint="#00316C19"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewModifier"
                android:layout_width="311dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="@string/modifier"
                android:textAlignment="center"
                android:textSize="36sp" />

            <ImageButton
                android:id="@+id/trier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="@string/trier_activites"
                android:scaleType="fitCenter"
                android:tint="#00AF9E9E"
                app:srcCompat="@drawable/tri" />

        </LinearLayout>

        <ListView
            android:id="@+id/listActivites"
            android:layout_width="match_parent"
            android:layout_height="549dp"
            android:background="#FFFFFF">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/editbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:clickable="false"
                android:contentDescription="@string/edit"
                android:scaleType="fitCenter"
                android:tint="#808080"
                app:srcCompat="@drawable/edit" />

            <ImageButton
                android:id="@+id/homebutton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:clickable="false"
                android:contentDescription="@string/home"
                android:foregroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                android:tint="#808080"
                app:srcCompat="@drawable/maison"
                tools:maxHeight="70dp"
                tools:maxWidth="50dp" />

            <ImageButton
                android:id="@+id/parametreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:clickable="false"
                android:contentDescription="@string/parametres"
                android:scaleType="fitCenter"
                android:tint="#808080"
                app:srcCompat="@drawable/setting" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>